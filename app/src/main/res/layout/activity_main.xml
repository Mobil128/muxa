<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/muxa_fon"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Поля ввода с метками -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- TextView с округлыми краями -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eni:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- EditText с округлыми краями -->
                    <EditText
                        android:id="@+id/gridWidthInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" /> <!-- Фон для EditText -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hündürü:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- EditText с округлыми краями -->
                    <EditText
                        android:id="@+id/gridHeightInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" /> <!-- Фон для EditText -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sürət:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- EditText с округлыми краями -->
                    <EditText
                        android:id="@+id/speedInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" /> <!-- Фон для EditText -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- TextView с округлыми краями -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- EditText с округлыми краями -->
                    <EditText
                        android:id="@+id/playerXInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" /> <!-- Фон для EditText -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- TextView с округлыми краями -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- EditText с округлыми краями -->
                    <EditText
                        android:id="@+id/playerYInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" /> <!-- Фон для EditText -->
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commandText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_background1"
                    android:text="Komanda: "
                    android:textColor="#F6F6F6"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>


        <!-- Кнопки управления игрой -->
        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oyuna Başla"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6750A3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İmtina"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6750A3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oyunu Dayandır"
            android:layout_marginTop="8dp"
            android:backgroundTint="#6750A3"
            android:textColor="#FFFFFF" />

        <!-- Текст команд игры -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
