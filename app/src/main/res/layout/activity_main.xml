<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/muxa_fon"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">



            <!-- Поле для ввода ширины сетки с меткой слева -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6750A3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Eni:"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/gridWidthInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="3"
                android:hint="5"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

            <!-- Поле для ввода высоты сетки с меткой слева -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#6750A3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Hündürü:"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/gridHeightInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="3"
                android:hint="5"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

            <!-- Поле для ввода скорости с меткой слева -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#6750A3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Sürət:"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/speedInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="3"
                android:hint="3"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

            <!-- Поле для ввода координаты X с меткой слева -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#6750A3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="X:"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/playerXInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="3"
                android:hint="3"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

            <!-- Поле для ввода координаты Y с меткой слева -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#6750A3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Y:"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/playerYInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="3"
                android:hint="3"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

            <!-- Кнопки управления игрой -->
            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oyuna Başla"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oyunu Dayandır"
                android:layout_marginTop="8dp" />

            <!-- Текст команд игры -->
        <TextView
            android:id="@+id/commandText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#6750A3"
            android:text="Komanda: "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>